<h1><%= t(:sign_in_title) %></h1>
	
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label t(:username) %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label t(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t(:sign_in) %>
  </div>
<% end %>
