<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <% @job.errors.full_messages.each do |msg| %>
    <script>
      $(function(){
        $.popup("<%= msg %>", 0, 'jm_message_error');
      });
    </script>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :status %>
    <%= f.check_box :status %>
  </div>
  
    <div class="field">
    <%= f.label :model_id %><br />
    <%= f.collection_select(:model_id, Model.all, :id, :name, :prompt => true) %>
    <%= f.text_field :model_name %>
  </div>
  
    <div class="field">
    <%= f.label :serial %><br />
    <%= f.text_field(:serial) %>
  </div>
  
    <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  
    <div class="field">
    <%= f.label :supplier %><br />
    <%= f.text_field :supplier %>
  </div>
  
    <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  
  <%= hidden_div_if(!current_user.is_admin?, :class => 'field') do %>
    <%= f.label :master_id %><br />
	  <%= f.collection_select(:master_id, User.all, :id, :username, :prompt => true) %>
	<% end -%>
  
  <div class="field">
    <%= f.label :income_date %><br />
    <%= f.date_select :income_date %>
  </div>
  
  <div class="field">
    <%= f.label :guarantee %>
    <%= f.check_box :guarantee %>
  </div>
    
  <div class="actions">
    <%= f.submit t(:submit) %>
  </div>
<% end %>
