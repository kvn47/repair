<table>
  <tr>
    <th><%= t :user_name %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= link_to(image_tag('edit.png'), edit_user_path(user)) %></td>
    <td><%= link_to(image_tag('delete.png'), user, :confirm => t(:confirmation), :method => :delete) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_user), new_user_path %>
