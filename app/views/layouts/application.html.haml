!!!
%html
%head
  %title= t :app_title
  = stylesheet_link_tag '/stylesheets/main.css'
  = stylesheet_link_tag '/stylesheets/smoothness/jquery-ui-1.8.21.custom.css'
  -# = javascript_include_tag :defaults
  = javascript_include_tag '/javascripts/application.js'
  = javascript_include_tag '/javascripts/jquery-1.7.2.min.js'
  = javascript_include_tag '/javascripts/jquery_ujs.js'
  = javascript_include_tag '/javascripts/jquery-ui-1.8.21.custom.min.js'
  = javascript_include_tag '/javascripts/jquery.ui.datepicker-ru.js'
  = javascript_include_tag '/javascripts/flash_popup.js'
  = csrf_meta_tag
  
%body
  
  .container
    = render 'layouts/header'
    %section.round
      = yield

  :javascript
    $(function(){
      if("#{notice}" != ''){
        $.popup("#{notice}", 2000);
      }
      if("#{alert}" != ''){
        $.popup("#{alert}", 0, 'jm_message_error');
      }
    });
