<% @models.each do |model| %>
  <tr>
    <td><%= model.name %></td>
    <td><%= link_to(image_tag('edit.png'), edit_model_path(model)) %></td>
    <td><%= link_to(image_tag('delete.png'), model, :confirm => t(:confirmation), 
        :method => "delete") %></td>
  </tr>
<% end %>
